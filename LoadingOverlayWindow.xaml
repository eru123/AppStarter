<Window x:Class="AppStarter.LoadingOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading..." Height="200" Width="300"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    
    <Border Background="{StaticResource SurfaceBrush}" 
            CornerRadius="12" 
            BorderBrush="{StaticResource SurfaceHoverBrush}" 
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Spinner -->
            <Viewbox Width="40" Height="40" Margin="0,0,0,16">
                <Grid>
                    <Path Data="M 20,0 A 20,20 0 0 1 40,20" 
                          Stroke="{StaticResource AccentBrush}" 
                          StrokeThickness="4" 
                          StrokeEndLineCap="Round"
                          RenderTransformOrigin="0.5,0.5">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="SpinnerRotate" Angle="0"/>
                        </Path.RenderTransform>
                        <Path.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SpinnerRotate"
                                                         Storyboard.TargetProperty="Angle"
                                                         From="0" To="360" Duration="0:0:1"
                                                         RepeatBehavior="Forever"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Path.Triggers>
                    </Path>
                    <Path Data="M 40,20 A 20,20 0 0 1 20,40 M 20,40 A 20,20 0 0 1 0,20 M 0,20 A 20,20 0 0 1 20,0" 
                          Stroke="{StaticResource TextMutedBrush}" 
                          StrokeThickness="4" Opacity="0.2"/>
                </Grid>
            </Viewbox>
            
            <TextBlock x:Name="MessageText"
                       Text="Stopping services..." 
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="16" FontWeight="SemiBold"
                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
            
            <TextBlock Text="Please wait while we clean up..." 
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="12"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>
