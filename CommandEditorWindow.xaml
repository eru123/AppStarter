<Window x:Class="AppStarter.CommandEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:models="clr-namespace:AppStarter.Models"
        xmlns:converters="clr-namespace:AppStarter.Converters"
        mc:Ignorable="d"
        Title="Command Editor" Height="650" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource SurfaceBrush}"
        Style="{StaticResource CustomWindowStyle}"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <converters:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
    </Window.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Text="Edit Command" 
                   Foreground="{StaticResource TextPrimaryBrush}"
                   FontSize="24" FontWeight="Bold"
                   Margin="0,0,0,24"/>
        
        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Name -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,16">
                    <Label Content="Name" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Padding="8"/>
                </StackPanel>
                
                <!-- Description -->
                <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,16">
                    <Label Content="Description" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Padding="8"/>
                </StackPanel>
                
                <!-- Command -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,16">
                    <Label Content="Command / Executable" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox Text="{Binding Command, UpdateSourceTrigger=PropertyChanged}" Padding="8"/>
                </StackPanel>
                
                <!-- Arguments -->
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,16">
                    <Label Content="Arguments" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox Text="{Binding Arguments, UpdateSourceTrigger=PropertyChanged}" Padding="8"/>
                </StackPanel>
                
                <!-- Working Directory -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,16">
                    <Label Content="Working Directory" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox Text="{Binding WorkingDirectory, UpdateSourceTrigger=PropertyChanged}" Padding="8"/>
                </StackPanel>
                
                <!-- Restart Policy -->
                <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,16">
                    <Label Content="Restart Policy" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <ComboBox SelectedItem="{Binding RestartPolicy}"
                              ItemsSource="{Binding Source={x:Static models:RestartPolicy.None}, Converter={StaticResource EnumToBoolConverter}}"/>
                </StackPanel>
                
                <!-- Restart Delay -->
                <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,0,16">
                    <Label Content="Restart Delay (seconds)" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox Text="{Binding RestartDelaySeconds, UpdateSourceTrigger=PropertyChanged}" Padding="8"/>
                </StackPanel>
                
                <!-- Cron Expression -->
                <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,0,16">
                    <Label Content="Cron Expression (optional)" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox Text="{Binding CronExpression, UpdateSourceTrigger=PropertyChanged}" Padding="8"/>
                </StackPanel>
                
                <!-- Max Restart Attempts -->
                <StackPanel Grid.Row="4" Grid.Column="2" Margin="0,0,0,16">
                    <Label Content="Max Restart Attempts" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox Text="{Binding MaxRestartAttempts, UpdateSourceTrigger=PropertyChanged}" Padding="8"/>
                </StackPanel>
                
                <!-- Triggers Section -->
                <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,16">
                    <Label Content="Start Triggers" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="8" Padding="16">
                        <WrapPanel>
                            <CheckBox Content="On Boot (as service)" Margin="0,0,24,8"
                                      IsChecked="{Binding IsOnBootTrigger}"/>
                            <CheckBox Content="On User Login" Margin="0,0,24,8"
                                      IsChecked="{Binding IsOnUserLoginTrigger}"/>
                            <CheckBox Content="On App Start" Margin="0,0,24,8"
                                      IsChecked="{Binding IsOnAppStartTrigger}"/>
                            <CheckBox Content="Scheduled (Cron)" Margin="0,0,24,8"
                                      IsChecked="{Binding IsScheduledTrigger}"/>
                            <CheckBox Content="Manual Only" Margin="0,0,24,8"
                                      IsChecked="{Binding IsManualTrigger}"/>
                        </WrapPanel>
                    </Border>
                </StackPanel>
                
                <!-- Options -->
                <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3">
                    <Label Content="Options" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="8" Padding="16">
                        <WrapPanel>
                            <CheckBox Content="Enabled" Margin="0,0,24,0" IsChecked="{Binding Enabled}"/>
                            <CheckBox Content="Hide Window" Margin="0,0,24,0" IsChecked="{Binding HideWindow}"/>
                            <CheckBox Content="Run as Administrator" Margin="0,0,24,0" IsChecked="{Binding RunAsAdmin}"/>
                        </WrapPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        
        <!-- Actions -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Style="{StaticResource SecondaryButton}"
                    Click="CancelButton_Click"
                    Padding="16,8" Margin="0,0,12,0"/>
            <Button Content="Save" Style="{StaticResource PrimaryButton}"
                    Click="SaveButton_Click"
                    Padding="24,8"/>
        </StackPanel>
    </Grid>
</Window>
