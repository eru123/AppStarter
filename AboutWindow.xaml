<Window x:Class="AppStarter.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About AppStarter" Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource CustomWindowStyle}">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="⚡ AppStarter" FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" Foreground="{StaticResource PrimaryBrush}" Margin="0,0,0,10"/>
            <TextBlock Text="Version 1.0.0" FontSize="14" HorizontalAlignment="Center" 
                       Foreground="{StaticResource TextSecondaryBrush}"/>
            <TextBlock Text="© 2026 AppStarter Inc." FontSize="12" HorizontalAlignment="Center" 
                       Foreground="{StaticResource TextMutedBrush}" Margin="0,5,0,20"/>
            
            <TextBlock Text="Process Manager &amp; Task Scheduler" 
                       HorizontalAlignment="Center" Foreground="{StaticResource TextPrimaryBrush}"
                       TextWrapping="Wrap" TextAlignment="Center" Margin="20,0,20,20"/>

            <Button Content="Check for Updates" Style="{StaticResource SecondaryButton}" 
                    Command="{Binding CheckUpdateCommand}" HorizontalAlignment="Center" Width="150"/>
            
            <TextBlock Text="OS: Windows 10/11" FontSize="10" HorizontalAlignment="Center" 
                       Foreground="{StaticResource TextMutedBrush}" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
