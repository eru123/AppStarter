<Window x:Class="AppStarter.LogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Logs"
        Height="450" Width="700"
        MinHeight="300" MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource CustomWindowStyle}">
    
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="ðŸ“‹ Application Logs" 
                       Foreground="{StaticResource TextPrimaryBrush}"
                       FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button Content="ðŸ—‘ Clear Logs" 
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding ClearLogsCommand}"
                    HorizontalAlignment="Right"
                    Padding="12,6" FontSize="12"/>
        </Grid>
        
        <!-- Log List -->
        <Border Grid.Row="1" 
                Background="{StaticResource SurfaceBrush}" 
                CornerRadius="8" Padding="8">
            <ListBox ItemsSource="{Binding Logs}"
                     ItemTemplate="{StaticResource LogEntryTemplate}"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>
    </Grid>
</Window>
